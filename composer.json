{
    "name": "zayro/php-pdo-orm",
    "description": "este es un paquete de librerias php permitiendo peticiones Rest-Full y Multiples base de datos (orm)",
    "type": "library",
    "license": "MIT",
    "scripts": {
        "fix-code": [
            "vendor/bin/php-cs-fixer fix --config-file=.php_cs",
            "bin/php-formatter f:h:f . --exclude=vendor --verbose",
            "bin/php-formatter f:s:f . --exclude=vendor --verbose",
            "bin/php-formatter f:u:s . --exclude=vendor --verbose"
        ],
        "preformatter": "php-cs-fixer fix ./library/ --rules=@PSR2,@Symfony --dry-run",
        "formatter": [
            "php-cs-fixer fix ./library/system.class.php --rules=@PSR2,@Symfony,@PHP71Migration --using-cache=no --show-progress=evaluating"
        ],
        "documentation": "phpdoc -d ./library/  -d app -t ./build/docs/ --template='responsive'",
        "post-install-cmd": [
            "@composer dump-autoload --optimize"
        ],
        "test": "vendor/bin/phpunit"
    },
    "require": {
        "bafs/testify": "^1.0",
        "firebase/php-jwt": "^4.0",
        "phpmailer/phpmailer": "dev-master",
        "codeguy/upload": "dev-master"
    },
    "authors": [{
        "name": "Marlon Zayro Arias Vargas",
        "email": "zayro8905@gmail.com"
    }],
    "require-dev": {
        "php": ">=5.6",
        "sebastian/phpcpd": "*",
        "friendsofphp/php-cs-fixer": "^2.0",
        "phpdocumentor/phpdocumentor": "2.*",
        "heroku/heroku-buildpack-php": "*",
        "psy/psysh": "@stable",
        "phploc/phploc": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "PhPdOrm\\": "library"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhPdOrm\\": "locale"
        }
    }

}